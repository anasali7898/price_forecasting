# Change data type of category column into integer and skip missing values
def convert_to_int(x):
    try:
        return int(x)
    except:
        return np.nan

X_train['category'] = X_train['category'].apply(convert_to_int)
X_val['category'] = X_val['category'].apply(convert_to_int)

